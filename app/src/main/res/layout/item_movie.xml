<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin">

    <ImageView
        android:id="@+id/image_movie"
        android:layout_width="@dimen/movie_pic_width"
        android:layout_height="@dimen/movie_pic_height"
        android:src="@mipmap/movie"/>

    <TextView
        android:id="@+id/tv_movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_movie"
        android:layout_alignLeft="@id/image_movie"
        android:maxEms="5"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="电影名称"
        android:textSize="@dimen/movie_name"/>

</RelativeLayout>